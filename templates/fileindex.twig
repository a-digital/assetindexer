{% extends "_layouts/cp" %}

{% set title = "Asset Indexer"|t %}

{% set content %}
	{% import "_includes/forms" as forms %}
	
	{% includeCssResource "assetindexer/css/AssetIndexer_Style.css" %}
	{% includeJsResource "assetindexer/js/AssetIndexer_Script.js" %}
	{% if source is defined %}
		<span id="source">{{ source }}</span>
		{% if step is defined %}
			<span id="filecount">{{ step }}</span>
			{% includeJsResource "assetindexer/js/AssetIndexer_FileAjax.js" %}
		{% else %}
			{% includeJsResource "assetindexer/js/AssetIndexer_FileAjax.js" %}
		{% endif %}
	{% endif %}
	
{% endset %}